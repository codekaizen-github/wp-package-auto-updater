{
    "name": "codekaizen/wp-package-auto-updater",
    "authors": [
        {
            "name": "Andrew Dawes",
            "email": "andrewjamesdawes@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "codekaizen/wp-package-meta-provider-contract": "dev-main",
        "psr/log": "^3.0",
        "respect/validation": "^2.2",
        "codekaizen/wp-package-meta-provider-orashub": "dev-main",
        "codekaizen/wp-package-meta-provider-local": "dev-main"
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "CodeKaizen\\WPPackageAutoUpdater\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeKaizen\\WPPackageAutoUpdaterTests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "php -d memory_limit=512M vendor/bin/phpstan",
        "sniff": "phpcs -ps src/ tests/",
        "fix": "phpcbf src/ tests/"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^3.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan-mockery": "^2.0",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "10up/wp_mock": "^1.1"
    }
}
